.wrap {
  width: 100%;
  background-color: #e8e8e8;
}
.wrap .add {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #e8e8e8;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  right: 20rpx;
  bottom: 200rpx;
}
.wrap .add .iconfont {
  font-size: 100rpx;
  color: #666;
}
.wrap .top_wrap {
  width: 100%;
}
.wrap .top_wrap .search_wrap {
  width: 100%;
  padding: 10rpx;
  height: 80rpx;
  background-color: var(--themeColor);
}
.wrap .top_wrap .search_wrap .search {
  background-color: #fff;
  justify-content: center;
  align-items: center;
  display: flex;
  height: 100%;
  color: #666;
  border-radius: 30rpx;
}
.wrap .top_wrap .tab_bar {
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #e8e8e8;
  background-color: #fff;
}
.wrap .top_wrap .tab_bar .list {
  height: 100%;
  display: flex;
}
.wrap .top_wrap .tab_bar .list .item {
  height: 100%;
  flex: 1;
}
.wrap .top_wrap .tab_bar .list .item view {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.wrap .top_wrap .tab_bar .list .item .active {
  border-bottom: 10rpx solid var(--themeColor);
}
.wrap .content {
  padding: 20rpx;
}
