.comment_wrap {
  padding: 40rpx 0;
  color: #666;
  border-top: 2rpx solid #e8e8e8;
}
.comment_wrap .comment_top {
  display: flex;
}
.comment_wrap .comment_top .top_left {
  display: flex;
  justify-content: center;
}
.comment_wrap .comment_top .top_left .head {
  width: 80rpx;
  border-radius: 50%;
}
.comment_wrap .comment_top .top_right {
  width: 100%;
  padding: 0 40rpx;
}
.comment_wrap .comment_top .top_right .nickName {
  height: 50rpx;
  color: var(--themeColor);
}
.comment_wrap .comment_top .top_right .content {
  margin-top: 30rpx;
}
.comment_wrap .comment_top .top_right .bottom {
  margin-top: 40rpx;
  font-size: 22rpx;
}
